<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ title or metadata.title }}</title>
    <meta name="title" content="{{ title or metadata.title }}">
    <meta name="description" content="{{ description or metadata.description }}">

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ metadata.url }}">
    <meta property="og:title" content="{{ title or metadata.title }}">
    <meta property="og:description" content="{{ description or metadata.description }}">
    <meta property="og:image" content="{{ '/images/social.jpg' | url }}">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="{{ metadata.url }}">
    <meta property="twitter:title" content="{{ title or metadata.title }}">
    <meta property="twitter:description" content="{{ description or metadata.description }}">
    <meta property="twitter:image" content="{{ '/images/social.jpg' | url }}">

    <link rel="icon" type="image/svg+xml" href="{{ '/images/favicon.svg' | url }}">


    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
  </head>
  <body class="{{ templateClass }}" >
    <!-- Wrapper -->
			<div id="wrapper">

				<!-- Banner -->
					<section id="banner" class="major">
						<div class="inner">
							<header class="major">
								<h1>Play Your Pride</h1>
							</header>
							<div class="content">
								<p>Discover gaming-related resources and participate in game-based communities that offer inclusivity and welcome diversity in gender-identity and sexuality.</p>
							</div>
						</div>
					</section>

				<!-- Main -->
					<div id="main">

						<!-- Two -->
							<section id="two">
								<div class="inner">
                  {{ content | safe }}
								</div>
							</section>
					</div>

				<!-- Footer -->
					<footer id="footer">
						<div class="inner">
<ul class="actions">
										<li><a href="{{ metadata.url | url }}" class="button">Go back home</a></li>
									</ul>
						</div>
					</footer>

			</div>

  </body>
</html>
