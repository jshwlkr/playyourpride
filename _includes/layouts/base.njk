<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">

    <meta property="og:type" content="website">
    <meta property="og:url" content="{{ metadata.url }}">

    <meta property="twitter:url" content="{{ metadata.url }}">

    <link rel="stylesheet" href="{{ '/css/main.css' | url }}">
  </head>
  <body class="{{ templateClass }}" >
    <!-- Wrapper -->
			<div id="wrapper">

				<!-- Banner -->
					<section id="banner" class="major">
						<div class="inner">
							<header class="major">
								<h1>Play Your Pride</h1>
							</header>
							<div class="content">
								<p>Discover gaming-related resources and participate in game-based communities that offer inclusivity and welcome diversity in gender-identity and sexuality.</p>
							</div>
						</div>
					</section>

				<!-- Main -->
					<div id="main">

						<!-- Two -->
							<section id="two">
								<div class="inner">
                  {{ content | safe }}
								</div>
							</section>
					</div>

				<!-- Footer -->
					<footer id="footer">
						<div class="inner">

						</div>
					</footer>

			</div>

  </body>
</html>
